{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "0.0.0.0:8000", "--noreload"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Run Server (with reload)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "0.0.0.0:8000"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Shell",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["shell"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Migrate",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["migrate"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Test All",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["test", "--verbosity=2"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Test Current App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["test", "${input:appName}", "--verbosity=2"],
            "django": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "appName",
            "type": "promptString",
            "description": "Enter the app name to test (e.g., apps.accounts)"
        }
    ]
}
