# =============================================================================
# ARDT FMS - GitHub Codespaces Environment
# =============================================================================
# This file is used by Codespaces for development.
# Copy to .env when running locally outside of Codespaces.
# DO NOT commit your actual .env file to git!
# =============================================================================

# =============================================================================
# Django Core Settings
# =============================================================================

DEBUG=True
SECRET_KEY=dev-secret-key-for-codespaces-only-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.githubpreview.dev,*.app.github.dev,*.preview.app.github.dev

# =============================================================================
# Database Configuration (SQLite for Codespaces - simple setup)
# =============================================================================

DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# Email Configuration (Console for development)
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =============================================================================
# Logging
# =============================================================================

DJANGO_LOG_LEVEL=INFO
LOG_LEVEL=INFO

# =============================================================================
# Application Settings
# =============================================================================

TIME_ZONE=Asia/Riyadh
LANGUAGE_CODE=en-us

# =============================================================================
# Security Settings (Disabled for development)
# =============================================================================

SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_DEBUG_TOOLBAR=True
ENABLE_CELERY=False
