# =============================================================================
# ARDT Floor Management System - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment
# Generate secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"

# =============================================================================
# Django Core Settings
# =============================================================================

DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection URL (preferred)
DATABASE_URL=postgres://ardt_user:your_password@localhost:5432/ardt_fms

# Or individual settings
DB_NAME=ardt_fms
DB_USER=ardt_user
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# Email Configuration
# =============================================================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@ardt.com

# =============================================================================
# File Storage
# =============================================================================

MEDIA_URL=/media/
MEDIA_ROOT=/var/www/ardt-fms/media
STATIC_ROOT=/var/www/ardt-fms/staticfiles

# =============================================================================
# Security Settings (Enable in Production)
# =============================================================================

SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=/var/log/ardt-fms/django.log

# =============================================================================
# Application Settings
# =============================================================================

TIME_ZONE=Asia/Riyadh
LANGUAGE_CODE=en-us
MAX_UPLOAD_SIZE=52428800

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_DEBUG_TOOLBAR=False
ENABLE_CELERY=True
